<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.dialog.sokchanny.myapplication.controller.HomeActivity">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft   ="10dp"
        android:layout_marginRight  ="10dp"
        android:layout_marginTop    ="0dp"
        android:layout_marginBottom ="20dp"
        card_view:cardCornerRadius  ="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BDBDBD">
            <RelativeLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/image_linea">

                    <ImageView
                        android:id                  ="@+id/image_house_1"
                        android:layout_height       ="190dp"
                        android:layout_width        ="0dp"
                        android:scaleType           ="centerCrop"
                        android:src                 ="@drawable/room2"
                        android:layout_weight       ="1"/>

                    <ImageView
                        android:id                  ="@+id/image_house_2"
                        android:layout_toRightOf    ="@+id/image_house_1"
                        android:layout_width        ="0dp"
                        android:layout_height       ="190dp"
                        android:scaleType           ="centerCrop"
                        android:src                 ="@drawable/room1"
                        android:layout_weight       ="1"/>

                </LinearLayout>


                <TextView
                    android:layout_below="@+id/image_linea"
                    android:id="@+id/info_text"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/home_id_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/price_text"
                    android:layout_toRightOf="@+id/info_text"
                    android:layout_below="@+id/image_linea"
                    android:layout_marginTop="5dp"
                    android:text="@string/home_price_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight ="true"
                    android:gravity                 ="end"
                    android:layout_marginRight      ="20dp"
                    />

                <TextView
                    android:id                  ="@+id/location_post"
                    android:layout_below        ="@+id/info_text"
                    android:layout_toRightOf    ="@+id/image_house"
                    android:layout_width        ="match_parent"
                    android:text                ="@string/home_location_textView"
                    android:layout_marginTop    ="10dp"
                    android:layout_marginLeft   ="20dp"
                    android:layout_marginBottom ="10dp"
                    android:layout_height       ="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>


