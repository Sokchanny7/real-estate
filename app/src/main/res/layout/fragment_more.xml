<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dialog.sokchanny.myapplication.controller.Main.HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/m_account_layout"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:paddingLeft="20dp"
                    android:layout_centerVertical="true"
                    android:text="Account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/m_account_layout"
                android:id="@+id/m_application_setting_layout"
                android:background="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:layout_centerVertical="true"
                    android:text="Application setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:background="@color/grey"
                android:layout_below="@+id/m_application_setting_layout"
                android:id="@+id/m_notification_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <RelativeLayout
                    android:layout_marginBottom="1dp"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:text="Notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:background="@color/colorWhite"
                android:layout_below="@+id/m_notification_layout"
                android:id="@+id/m_logout_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <RelativeLayout
                    android:layout_marginBottom="1dp"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:text="logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</FrameLayout>
